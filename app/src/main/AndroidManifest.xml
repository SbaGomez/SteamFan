<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ar.sebastiangomez.steam">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32"
        tools:ignore="ScopedStorage" />

    <application
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/gameslogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/gameslogo"
        android:supportsRtl="true"
        android:theme="@style/Theme.GamesDB"
        tools:targetApi="31">
        <activity
            android:name="com.ar.sebastiangomez.steam.ui.BookmarkActivity"
            android:exported="false" />
        <activity
            android:name="com.ar.sebastiangomez.steam.ui.DetalleActivity"
            android:exported="false" />
        <activity
            android:name="com.ar.sebastiangomez.steam.ui.HomeActivity"
            android:exported="false"
            android:launchMode="singleTop" />
        <activity
            android:name="com.ar.sebastiangomez.steam.ui.LoginActivity"
            android:exported="false"/>
        <activity
            android:name="com.ar.sebastiangomez.steam.ui.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>